<ScrollView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.quizapp.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bitcoin"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:text="Cryptocurrency Quizz"
            android:textAllCaps="true"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:text="1. Which one of the below is not a cryptocurrency?"
            android:textColor="#7C4DFF"
            android:textSize="18sp" />

        <RadioGroup

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/Dodgecoin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:buttonTint="#FFFFFF"
                android:padding="8dp"
                android:text="Dodgecoin"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/Feathercoin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="16dp"
                android:buttonTint="#FFFFFF"
                android:padding="8dp"
                android:text="Feathercoin"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/Goshcoin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="16dp"
                android:buttonTint="#FFFFFF"
                android:padding="8dp"
                android:text="Goshcoin"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16dp"
            android:text="2. A continuously growing list of records, called blocks, which are linked and secured using cryptography is called:"
            android:textColor="#7C4DFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/Blockchain"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24sp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_horizontal"
            android:hint="write your answer here"
            android:inputType="text"
            android:shadowColor="#9E9E9E"
            android:textColor="#FFFFFF"
            android:textColorHint="#9E9E9E" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="3. From the words below, choose the two that reflect Trading Chart Patterns"
            android:textColor="#7C4DFF"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/Wedge"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginRight="102dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:buttonTint="@color/colorPrimary"
                android:text="Wedge"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/TrippleBottom"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/colorPrimary"
                android:text="Tripple Bottom"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/CupAndHandle"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:buttonTint="@color/colorPrimary"
                android:text="Cup and handle"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/Pot"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/colorPrimary"
                android:text="Pot"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            android:text="4. What is the name of the first and most fameous cryptocurrency?"
            android:textColor="#7C4DFF"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/Bitcoin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_horizontal"
            android:hint="Now, this is pretty easy..."
            android:inputType="text"
            android:shadowColor="#9E9E9E"
            android:textColor="#FFFFFF"
            android:textColorHint="#9E9E9E" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16dp"
            android:text="4. Which of these images below represents Etherum logo?"
            android:textColor="#7C4DFF"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/Verge"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/colorPrimary"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:contentDescription="Verge"
                android:src="@drawable/verge" />

            <CheckBox
                android:id="@+id/Nem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/colorPrimary"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:contentDescription="Nem"
                android:src="@drawable/nem" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">


            <CheckBox
                android:id="@+id/EtherumLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/colorPrimary"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:contentDescription="Etherum"
                android:src="@drawable/eth_logo" />



            <CheckBox
                android:id="@+id/Sia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="16dp"
                android:buttonTint="@color/colorPrimary"
                android:textColor="#FFFFFF" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="16dp"
                android:contentDescription="Sia"
                android:src="@drawable/sia" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="32dp"
            android:text="6. What is the approximate Total Cryptocurrency Marketcap?"
            android:textColor="#7C4DFF"
            android:textSize="18sp" />

        <RadioGroup

            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="vertical">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:buttonTint="#FFFFFF"
                android:padding="8dp"
                android:text="50 Million USD"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/marketCap"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="16dp"
                android:buttonTint="#FFFFFF"
                android:padding="8dp"
                android:text="500 Billion USD"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="24dp"
                android:layout_marginLeft="16dp"
                android:buttonTint="#FFFFFF"
                android:padding="8dp"
                android:text="1 Trillion USD"
                android:textColor="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_horizontal"
            android:onClick="quizResults"
            android:text="SUBMIT"
            android:textAllCaps="true"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                android:gravity="right"
                android:layout_weight="1"
                android:text="SCORE:"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="24dp"
                android:layout_weight="1"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>